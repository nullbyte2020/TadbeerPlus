{
    "name": "tadbeerplus/domestic-workers-management",
    "description": "نظام تدبير بلس لإدارة العمالة المنزلية والخدم - Tadbeer Plus Domestic Workers Management System",
    "type": "project",
    "keywords": ["php", "mysql", "domestic-workers", "uae", "management-system", "contracts", "tadbeer"],
    "homepage": "https://tadbeerplus.ae",
    "license": "MIT",
    "authors": [
        {
            "name": "Tadbeer Plus Development Team",
            "email": "dev@tadbeerplus.ae",
            "homepage": "https://tadbeerplus.ae",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-zip": "*",
        "ext-openssl": "*",
        "monolog/monolog": "^3.0",
        "phpmailer/phpmailer": "^6.8",
        "mpdf/mpdf": "^8.2",
        "phpoffice/phpspreadsheet": "^1.29",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.8",
        "respect/validation": "^2.2",
        "intervention/image": "^2.7",
        "league/csv": "^9.9",
        "ramsey/uuid": "^4.7",
        "nesbot/carbon": "^2.68",
        "league/flysystem": "^3.0",
        "symfony/console": "^6.0",
        "twig/twig": "^3.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "TadbeerPlus\\": "src/",
            "TadbeerPlus\\Config\\": "config/",
            "TadbeerPlus\\Controllers\\": "src/Controllers/",
            "TadbeerPlus\\Models\\": "src/Models/",
            "TadbeerPlus\\Services\\": "src/Services/",
            "TadbeerPlus\\Utils\\": "src/Utils/"
        },
        "files": [
            "config/constants.php",
            "includes/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "TadbeerPlus\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src --standard=PSR12",
        "fix-style": "phpcbf src --standard=PSR12",
        "analyze": "phpstan analyse src --level=max",
        "dev-setup": [
            "php -r \"copy('.env.example', '.env');\"",
            "php setup.php"
        ],
        "backup-db": "php scripts/backup_database.php",
        "import-workers": "php scripts/import_workers.php"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/tadbeerplus/domestic-workers-management/issues",
        "source": "https://github.com/tadbeerplus/domestic-workers-management",
        "docs": "https://docs.tadbeerplus.ae"
    }
}
